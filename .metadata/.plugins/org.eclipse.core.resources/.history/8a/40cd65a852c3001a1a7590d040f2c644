package google;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class WelcomeController {

	@Autowired
	WelcomeService service;
	
	@RequestMapping("/welcome")
	public String welcome(@RequestParam("firstNumber") String fNo, @RequestParam("secondNumber") String sNo) {
		return service.retrieveWelcomeMessage(fNo, sNo);
	}
	
	
}

@Component
class WelcomeService {
	public String retrieveWelcomeMessage(int fNo, int sNo) {
		int total = fNo + sNo;
		return "Good Morning, Addition is:" + total ;
	}
}